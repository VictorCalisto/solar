<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cargo</th>
      <th>Email</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= funcionario.nome %></td>
        <td><%= funcionario.cargo %></td>
        <td><%= funcionario.user.email %></td>
        <td>
          <%= link_to "Editar", edit_funcionario_path(funcionario) %>
          <%= button_to "Deletar", funcionario, method: :delete, data: { confirm: "Tem certeza que deseja deletar este funcionário?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

